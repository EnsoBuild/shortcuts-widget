{
  "version": 2,
  "build": {
    "ignoreCommand": "if git diff --quiet HEAD^ HEAD ./src; then exit 1; else exit 0; fi"
  },
  "builds": [
    {
      "src": "app/dist/**",
      "use": "@vercel/static"
    },
    {
      "src": "widget/dist/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "functions": {},
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ],
  "overrides": {
    "app/dist/**": {
      "cacheControl": "public, max-age=31536000, immutable"
    },
    "widget/dist/**": {
      "cacheControl": "public, max-age=31536000, immutable"
    }
  }
}
