{
  "version": 2,
  "builds": [
    {
      "src": "app/dist/**",
      "use": "@vercel/static"
    },
    {
      "src": "widget/dist/**",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    { "source": "/app/dist/(.*)", "destination": "/app/dist/$1" },
    { "source": "/widget/dist/(.*)", "destination": "/widget/dist/$1" },
    { "source": "/assets/(.*)", "destination": "/app/dist/assets/$1" },

    { "source": "/(.*)", "destination": "/app/dist/index.html" }
  ],
  "headers": [
    {
      "source": "/app/dist/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/widget/dist/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ]
}
